@model IEnumerable<Domain.ViewModels.EmployeeListView>
<div class="col-12 border-bottom">
    <div class="col-8">
        <h2 class="text-primary">Software Mind Personnel</h2>
    </div>
</div>
<div class="row p-3" style="justify-content:flex-end">
    <div class="col-2">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newEmployeeModal">
            New Employee
        </button>
    </div>
</div>
@foreach (var item in Model)
{
    <div style="display: flex;flex-flow: row wrap; justify-content:center">
        <div class="row border py-5">
            <div class="col py-2">
                <div class="form-group">
                    <img id="listAvatar_@item.EmployeeId" style="width:80%;height:90%; object-fit:contain" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQMk5lXjt8WO3iCoNXzDDYEOv4c_v1DnR0isw&s)">
                </div>
            </div>
            <div class="col py-2">
                <div class="form-group row">
                    <div class="col-5">
                        <p>
                            <span>@item.FullName</span>
                            <span style="color:#808080">(@item.DepartmentName)</span>
                        </p>
                    </div>
                    <div class="col-7">
                        <div class="row">
                            <div>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-Id="@item.EmployeeId">View Details</a>
                                <a class="btn btn-close" asp-action="Delete" asp-route-Id="@item.EmployeeId"></a>
                            </div>                            
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <p>Hire Date</p>
                    <p>
                        <span>@item.HireDate</span>
                        <span style="color:#808080">(@item.TimeSinceJoined)</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
}
<!-- Modal -->
<div class="modal fade" id="newEmployeeModal" tabindex="-1" aria-labelledby="newEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="newEmployeeModalLabel">Employee Onboarding</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label for="firstName">First Name</label>
                    </div>
                    <div class="col-8">
                        <input type="text" id="firstName" name="firstName" value="" />
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label for="lastName">Last Name</label>
                    </div>
                    <div class="col-8">
                        <input type="text" id="lastName" name="lastName" value="" />
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label for="address">Address</label>
                    </div>
                    <div class="col-8">
                        <input type="text" id="address" name="address" value="" />
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label for="phone">Phone Number</label>
                    </div>
                    <div class="col-8">
                        <input type="text" id="phone" name="phone" value="" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Dismiss</button>
                <button id="addEmployeeButton" type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>